@model IEnumerable<WebAppChElementeMVC.Models.Element>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex mt-2">
  <div class="me-auto">
    <h3>Elemente</h3>
  </div>
  <div class="my-0">
    <a class="btn btn-primary w-auto mt-2 mb-0" asp-action="Create">Create New</a>
  </div>
</div>

<table class="table align-items-center mb-2">
  <thead>
    <tr>
      <th class="ps-2 text-secondary">
        @Html.DisplayNameFor(model => model.Ordnungszahl)
      </th>
      <th class="ps-2 text-secondary">
        @Html.DisplayNameFor(model => model.Symbol)
      </th>
      <th class="ps-2 text-secondary">
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th class="ps-2 text-secondary">
        @Html.DisplayNameFor(model => model.Gruppe)
      </th>
      <th class="ps-2 text-secondary">
        @Html.DisplayNameFor(model => model.Periode)
      </th>
      <th class="ps-2 text-secondary">
        @Html.DisplayNameFor(model => model.Zustand)
      </th>
      <th class="text-secondary opacity-7 text-end">
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Ordnungszahl)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Symbol)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Gruppe.Nummer)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Periode.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Zustand.Bezeichnung)
        </td>
        <td class="pe-0">
          <div class="d-flex">
            <a class="btn btn-primary w-auto btn-sm ms-auto me-2 mb-0" asp-action="Details" asp-route-id="@item.Id">Details</a>
            <a class="btn btn-secondary w-auto btn-sm me-2 mb-0" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a class="btn btn-secondary w-auto btn-sm me-0 mb-0" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </div>
        </td>
      </tr>
    }
  </tbody>
</table>
