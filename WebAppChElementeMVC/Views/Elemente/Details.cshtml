@model WebAppChElementeMVC.Models.Element

@{
    ViewData["Title"] = "Details";
}

<div class="mt-3 mb-3">
  <h4>Element Details</h4>
</div>
<div class="row mx-n2">
  <div class="col-md-5 px-2 pb-3">
    <div class="card shadow p-2">
      <h6 class="px-2">Periode</h6>

      <dl class="row m-0 px-2 pt-2">
        <dt class="col-sm-6 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Ordnungszahl)
        </dt>
        <dd class="col-sm-6 mb-0 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Ordnungszahl)
        </dd>
        <dt class="col-sm-6 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Symbol)
        </dt>
        <dd class="col-sm-6 mb-0 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Symbol)
        </dd>
        <dt class="col-sm-6 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-6 mb-3 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-6 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Gruppe)
        </dt>
        <dd class="col-sm-6 mb-0 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Gruppe.Nummer)
        </dd>
        <dt class="col-sm-6 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Periode)
        </dt>
        <dd class="col-sm-6 mb-0 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Periode.Name)
        </dd>
        <dt class="col-sm-6 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Zustand)
        </dt>
        <dd class="col-sm-6 mb-0 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Zustand.Bezeichnung)
        </dd>
      </dl>

    </div>
  </div>
<div class="d-flex mt-2 mb-3">
  <a class="btn btn-primary w-auto me-2 mb-0" asp-action="Edit" asp-route-id="@Model?.Id">Edit Element</a>
  <a class="btn btn-secondary w-auto me-2 mb-0" asp-action="Index">Back to List</a>
</div>