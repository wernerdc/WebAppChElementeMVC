@model WebAppChElementeMVC.Models.Element

@{
    ViewData["Title"] = "Edit";
}

<div class="mt-3 mb-3">
  <h4>Edit Element</h4>
</div>
<form asp-action="Edit">
  <div class="row mx-n2">
    <div class="col-md-4 px-2 pb-3">
      <div class="card shadow p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group pb-4">
          <div class="input-group input-group-static">
            <label asp-for="Ordnungszahl" class="text-xs">Ordnungszahl</label>
            <input asp-for="Ordnungszahl" class="form-control pt-0" type="number" />
          </div>
          <span asp-validation-for="Ordnungszahl" class="text-danger text-xs"></span>
        </div>
        <div class="form-group pb-4">
          <div class="input-group input-group-static">
            <label asp-for="Symbol" class="text-xs">Symbol</label>
            <input asp-for="Symbol" class="form-control pt-0" />
          </div>
          <span asp-validation-for="Symbol" class="text-danger text-xs"></span>
        </div>
        <div class="form-group">
          <div class="input-group input-group-static">
            <label asp-for="Name" class="text-xs">Name</label>
            <input asp-for="Name" class="form-control pt-0" />
          </div>
          <span asp-validation-for="Name" class="text-danger text-xs"></span>
        </div>
      </div>
    </div>

    <div class="col-md-4 px-2 pb-3">
      <div class="card shadow p-4">
        

        <div class="form-group pb-4">
          <div class="input-group input-group-static">
            <label asp-for="GruppeId" class="text-xs">Gruppe</label>
            <select asp-for="GruppeId" class="form-control pt-0" asp-items="ViewBag.GruppeId"></select>
          </div>
          <span asp-validation-for="GruppeId" class="text-danger text-xs"></span>
        </div>

        <div class="form-group pb-4">
          <div class="input-group input-group-static">
            <label asp-for="PeriodeId" class="text-xs">Periode</label>
            <select asp-for="PeriodeId" class="form-control pt-0" asp-items="ViewBag.PeriodeId"></select>
          </div>
          <span asp-validation-for="PeriodeId" class="text-danger text-xs"></span>
        </div>
        <div class="form-group">
          <div class="input-group input-group-static">
            <label asp-for="ZustandId" class="text-xs">Aggregatzustand</label>
            <select asp-for="ZustandId" class="form-control pt-0" asp-items="ViewBag.ZustandId"></select>
          </div>
          <span asp-validation-for="ZustandId" class="text-danger text-xs"></span>
        </div>
      </div>
    </div>

  </div>
  <div class="form-group d-flex pt-2 pb-3">
    <input type="submit" value="Save" class="btn btn-primary me-2 mb-0" />
    <a asp-action="Index" class="btn btn-secondary me-2 mb-0">Back to List</a>
  </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
  
