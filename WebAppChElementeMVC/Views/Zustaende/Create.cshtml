@model WebAppChElementeMVC.Models.Zustand

@{
    ViewData["Title"] = "Create";
}

<div class="mt-3 mb-3">
  <h4>Create Aggregatzustand</h4>
</div>
<form asp-action="Create">
  <div class="row mx-n2">
    <div class="col-md-3 px-2 pb-3">
      <div class="card shadow p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <div class="input-group input-group-static">
            <label asp-for="Bezeichnung" class="text-xs"></label>
            <input asp-for="Bezeichnung" class="form-control pt-0">
          </div>
          <span asp-validation-for="Bezeichnung" class="text-danger text-xs"></span>
        </div>
      </div>
    </div>
    <div class="form-group d-flex pt-2 pb-3">
      <input type="submit" value="Create" class="btn btn-primary me-2 mb-0" />
      <a asp-action="Index" class="btn btn-secondary me-2 mb-0">Back to List</a>
    </div>
  </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
