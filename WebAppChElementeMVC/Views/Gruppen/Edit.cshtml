@model WebAppChElementeMVC.Models.Gruppe

@{
    ViewData["Title"] = "Edit";
}

<div class="mt-3 mb-3">
  <h4>Edit Gruppe</h4>
</div>
<form asp-action="Edit">
  <div class="row mx-n2">
    <div class="col-md-3 px-2 pb-3">
      <div class="card shadow p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
          <div class="input-group input-group-static">
            <label asp-for="Nummer" class="text-xs">Nummer</label>
            <input asp-for="Nummer" class="form-control pt-0" placeholder="0" type="number">
          </div>
          <span asp-validation-for="Nummer" class="text-danger text-xs"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group d-flex pt-2 pb-3">
    <input type="submit" value="Save" class="btn btn-primary me-2 mb-0" />
    <a asp-action="Index" class="btn btn-secondary me-2 mb-0">Back to List</a>
  </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
