@model WebAppChElementeMVC.Models.Gruppe

@{
    ViewData["Title"] = "Details";
}

<div class="mt-3 mb-3">
  <h4>Gruppe Details</h4>
</div>
<div class="row mx-n2">
  <div class="col-md-3 px-2 pb-3">
    <div class="card shadow p-2">
      <h6 class="px-2">Gruppe</h6>

      <dl class="row m-0 px-2 pt-2">
        <dt class="col-sm-8 ps-0 text-secondary">
          @Html.DisplayNameFor(model => model.Nummer)
        </dt>
        <dd class="col-sm-4 pe-0 text-secondary">
          @Html.DisplayFor(model => model.Nummer)
        </dd>
      </dl>

    </div>
  </div>
  <div class="col-md-9 px-2 pb-3">
    <div class="card shadow px-2 pt-2">
      <h6 class="px-2">Elemente</h6>

      <table class="table mb-0">
        <thead>
          <tr>
            <th class="ps-2 text-secondary">Periode</th>
            <th class="ps-2 text-secondary">Ordnungszahl</th>
            <th class="ps-2 text-secondary">Symbol</th>
            <th class="ps-2 text-secondary">Element</th>
            <th class="ps-2 text-secondary">Zustand</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model.Elemente)
          {
            <tr>
              <td>
                @Html.DisplayFor(modelItem => item.Periode.Name)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Ordnungszahl)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Symbol)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Name)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Zustand.Bezeichnung)
              </td>
            </tr>
          }
        </tbody>
      </table>

    </div>
  </div>
</div>
<div class="d-flex mt-2 mb-3">
  <a class="btn btn-primary w-auto me-2 mb-0" asp-action="Edit" asp-route-id="@Model?.Id">Edit Gruppe</a>
  <a class="btn btn-secondary w-auto me-2 mb-0" asp-action="Index">Back to List</a>
</div>