@model WebAppChElementeMVC.Models.Gruppe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gruppe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nummer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nummer)
        </dd>
    </dl>
</div>
<div>
    <br /> <br />
    <h4>Elemente</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Periode</th>
                    <th>Ordnungszahl</th>
                    <th>Symbol</th>
                    <th>Element</th>
                    <th>Zustand</th>
                </tr>
                @foreach (var item in Model.Elemente)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Periode.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ordnungszahl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Symbol)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zustand.Bezeichnung)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
